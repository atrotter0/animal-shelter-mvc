@{
  Layout = "_Layout";
}

<div class='container'>
      <div class='row'>
          <h2>Add Animal</h2>
          <form action="/animals" method="post">
              <div class="form-group">
                  <label for="type">Type of Animal:</label>
                  <input name="type" id="type" type="text" class="form-control">
              </div>
              <div class="form-group">
                  <label for="breed">Animal Breed:</label>
                  <input name="breed" id="breed" type="text" class="form-control">
              </div>
              <div class="form-group">
                  <label for="gender">Animal Gender:</label>
                  <select name="gender" id="gender" class="form-control">
                      <option>Male</option>
                      <option>Female</option>
                  </select>
              </div>
              <div class="form-group">
                  <label for="name">Animal Name:</label>
                  <input name="name" id="name" type="text" class="form-control">
              </div>
              <button type="submit" class="btn btn-lg btn-info">Add Animal</button>
          </form>
      </div>
</div>
