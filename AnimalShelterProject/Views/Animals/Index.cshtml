@{
  Layout = "_Layout";
}

  <div class='container'>
      <div class='row'>
            @if (Model.Count == 0)
             {
                 <p>No animals available for adoption. Please check back soon!</p>
             }
             else
             {
                 @foreach (var animal in Model)
                 {
                    <div class='panel panel-default'>
                        <div class='panel-heading'>@animal.Name</div>
                        <div class='panel-body'>
                            Admittance Date: @animal.ConvertDateToString(animal.AdmittanceDate)<br/>
                            Type: @animal.Type<br/>
                            Breed: @animal.Breed<br/>
                            Gender: @animal.Gender<br/>
                        </div>
                        <div class='animal-actions-box'>
                            <a href='/animals/@animal.Id' class='btn btn-md btn-success'>Update</a>
                            <form id='deleteForm' action='/animals/@animal.Id/delete' method='POST'>
                                <button type='submit' class='btn btn-md btn-danger'>Delete</button>
                            </form>
                        </div>
                    </div>
                 }
             }
         </div>
  </div>
