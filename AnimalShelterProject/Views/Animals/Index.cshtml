@{
  Layout = "_Layout";
}

  <div class='container'>
      <div class='row'>
            @if (Model.Count == 0)
             {
                 <p>No animals available for adoption. Please check back soon!</p>
             }
             else
             {
                 @foreach (var animal in Model)
                 {
                    <div class='panel panel-default'>
                        <div class='panel-heading'>@animal.Name</div>
                        <div class='panel-body'>
                            Admittance Date: @animal.ConvertDateToString(animal.AdmittanceDate)<br/>
                            Type: @animal.Type<br/>
                            Breed: @animal.Breed<br/>
                            Gender: @animal.Gender<br/>
                        </div>
                    </div>
                 }
             }
         </div>
  </div>
